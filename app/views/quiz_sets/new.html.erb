<h1>クイズセットのタイトルを入力してください</h1>

<% if @quiz_set.errors.any? %>
  <div style="color: red;">
    <h2>エラーがあります：</h2>
    <ul>
      <% @quiz_set.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @quiz_set) do |f| %>
  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <%= f.submit "作成する" %>
<% end %>

<%= link_to "クイズセット一覧に戻る", quiz_sets_path, class: "neon-button" %>
